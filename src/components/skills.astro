---
import Certificates from "./certificates.astro";
import TechMarquee from "./TechMarquee.astro";
import { ui } from "../i18n/ui";

const { lang = "es" } = Astro.props;
const t = ui[lang as keyof typeof ui];
---

<section class="skills-section" id="skills">
    <div class="container">
        <h2>{t["skills.title"]}</h2>
        <p>{t["skills.subtitle"]}</p>
        <TechMarquee />
        <Certificates />
    </div>
</section>

<style>
    .container {
        max-width: 700px;
        margin: 0 auto;
    }

    .skills-section h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
    }

    .skills-section p {
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--text-color);
        opacity: 0.8;
        max-width: 500px;
        margin: 0 auto 1.5rem auto;
    }

    .certificates {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .certificates h3 {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
    }
    .certificates a {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: var(--text-color);
    }

    .certificates a:hover {
        color: var(--accent-color);
    }

    .certificates img {
        max-width: 60px;
        height: auto;
    }
</style>
