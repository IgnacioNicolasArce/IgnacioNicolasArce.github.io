---
import { languages } from "../i18n/ui";

const { lang = "es" } = Astro.props;
---

<div class="language-picker">
    {
        Object.entries(languages).map(([key, label]) => (
            <a
                href={key === "es" ? "/" : `/${key}/`}
                class={lang === key ? "active" : ""}
            >
                {key.toUpperCase()}
            </a>
        ))
    }
</div>

<style>
    .language-picker {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    a {
        color: var(--text-color);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        opacity: 0.7;
        transition:
            opacity 0.2s,
            color 0.2s;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
    }

    a:hover {
        opacity: 1;
        color: var(--accent-color);
    }

    a.active {
        opacity: 1;
        font-weight: 700;
        color: var(--accent-color);
        background: rgba(88, 166, 255, 0.1);
    }
</style>
