---
import { ui } from "../i18n/ui";

const { lang = "es" } = Astro.props;
const t = ui[lang as keyof typeof ui];
---

<section class="contact-section" id="contacto">
    <div class="container">
        <div class="contact-header">
            <h2>{t["contact.title"]}</h2>
            <p>{t["contact.subtitle"]}</p>

            <div class="recruiter-badge">
                <span>üè¢ {t["contact.recruiter_text"]}</span>
                <a
                    href="https://www.linkedin.com/in/ignacio-arce-6aa569267/"
                    target="_blank"
                    rel="noopener noreferrer"
                    >{t["contact.linkedin_cta"]}
                </a>
                {t["contact.or"]}
                <a href="/CV_Arce.pdf" target="_blank" rel="noopener noreferrer"
                    >{t["contact.download_cv"]}</a
                >
            </div>
        </div>

        <form
            action="https://formspree.io/f/xnjpkjya"
            method="POST"
            class="contact-form"
        >
            <div class="form-row">
                <div class="form-group">
                    <label for="name">{t["contact.form.name"]}</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder={t["contact.form.name_placeholder"]}
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="email">{t["contact.form.email"]}</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder={t["contact.form.email_placeholder"]}
                        required
                    />
                </div>
            </div>

            <div class="form-group">
                <label for="subject">{t["contact.form.subject"]}</label>
                <div class="select-wrapper">
                    <select id="subject" name="subject" required>
                        <option value="" disabled selected
                            >{t["contact.form.subject_default"]}</option
                        >
                        <option value="freelance"
                            >{t["contact.form.subject_freelance"]}</option
                        >
                        <option value="hiring"
                            >{t["contact.form.subject_hiring"]}</option
                        >
                        <option value="collab"
                            >{t["contact.form.subject_collab"]}</option
                        >
                    </select>
                    <svg
                        class="arrow-icon"
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><polyline points="6 9 12 15 18 9"></polyline></svg
                    >
                </div>
            </div>

            <div class="form-group">
                <label for="message">{t["contact.form.message"]}</label>
                <textarea
                    id="message"
                    name="message"
                    rows="5"
                    placeholder={t["contact.form.message_placeholder"]}
                    required></textarea>
            </div>

            <button type="submit" class="submit-btn">
                {t["contact.send"]}
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><line x1="22" y1="2" x2="11" y2="13"></line><polygon
                        points="22 2 15 22 11 13 2 9 22 2"></polygon></svg
                >
            </button>
        </form>
    </div>
</section>

<style>
    .contact-section {
        padding: 5rem 1rem;
    }

    .container {
        max-width: 700px;
        margin: 0 auto;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .contact-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
    }

    .contact-header p {
        font-size: 1.1rem;
        color: var(--text-color);
        opacity: 0.8;
        max-width: 500px;
        margin: 0 auto 1.5rem auto;
    }

    .recruiter-badge {
        background: rgba(88, 166, 255, 0.1);
        border: 1px solid rgba(88, 166, 255, 0.3);
        color: var(--accent-color);
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .recruiter-badge a {
        color: var(--accent-color);
        text-decoration: underline;
        font-weight: 700;
        margin-left: 5px;
        transition: color 0.2s;
    }

    [data-theme="light"] .recruiter-badge a {
        color: #0969da;
    }

    .recruiter-badge a:hover {
        color: var(--text-color);
        opacity: 0.8;
    }

    .contact-form {
        background: var(--secondary-bg);
        padding: 2.5rem;
        border-radius: 16px;
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-row {
        display: flex;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        flex: 1;
    }

    label {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-color);
        margin-left: 4px;
    }

    input,
    textarea,
    select {
        padding: 0.9rem;
        border: 1px solid var(--border-color);
        background-color: var(--bg-color);
        color: var(--text-color);
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.2s;
        width: 100%;
    }

    input::placeholder,
    textarea::placeholder {
        color: #8b949e; /* Gris claro para tema oscuro */
    }

    [data-theme="light"] input::placeholder,
    [data-theme="light"] textarea::placeholder {
        color: #57606a; /* Gris oscuro para tema claro */
    }

    input:focus,
    textarea:focus,
    select:focus {
        outline: none;
        border-color: var(--accent-color);
        box-shadow: 0 0 0 2px rgba(88, 166, 255, 0.1);
    }

    .select-wrapper {
        position: relative;
    }

    select {
        appearance: none;
        cursor: pointer;
    }

    .arrow-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        color: var(--text-color);
        opacity: 0.7;
        width: 18px;
    }

    .submit-btn {
        background-color: var(--accent-color);
        color: #0d1117;
        border: none;
        padding: 1rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition:
            transform 0.2s,
            filter 0.2s;
        margin-top: 0.5rem;
    }

    .submit-btn:hover {
        filter: brightness(1.1);
        transform: translateY(-2px);
    }

    .submit-btn svg {
        stroke: currentColor;
    }

    @media (max-width: 600px) {
        .form-row {
            flex-direction: column;
            gap: 1.5rem;
        }
        .contact-form {
            padding: 1.5rem;
        }
        .recruiter-badge {
            font-size: 0.8rem;
            display: flex;
            flex-direction: column;
            gap: 5px;
            text-align: center;
        }
    }
</style>
